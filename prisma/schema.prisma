generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin user for blog management
model AdminUser {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String    // hashed password
  name      String
  role      String    @default("ADMIN") // ADMIN, EDITOR
  createdAt DateTime  @default(now())
  sessions  Session[]
}

// Session for admin authentication (persisted in DB for serverless compatibility)
model Session {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  userName  String
  email     String
  role      String
  createdAt DateTime  @default(now())
  expiresAt DateTime
  user      AdminUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
}

// Author of blog posts (can be same as admin user, but kept separate for flexibility)
model Author {
  id    String  @id @default(cuid())
  email String  @unique
  name  String
  avatar String?
  posts Post[]
}

// Blog post
model Post {
  id          String      @id @default(cuid())
  slug        String      @unique
  title       String
  description String
  content     String      // rich HTML/markdown content
  excerpt     String?
  coverImage  String?     // URL to cover image
  published   Boolean     @default(false)
  publishedAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  authorId    String
  author      Author      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  categories  Category[]
  tags        Tag[]
  queueEntry  QueuedPost?

  @@index([slug])
  @@index([published])
  @@index([publishedAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([authorId])
  @@index([published, publishedAt(sort: Desc)])
}

// Blog category
model Category {
  id          String @id @default(cuid())
  name        String @unique
  slug        String @unique
  description String?
  posts       Post[]

  @@index([slug])
}

// Queued post for automated blog publishing pipeline
model QueuedPost {
  id        String   @id @default(cuid())
  title     String
  position  Int      // FIFO ordering
  status    String   @default("pending") // pending | generating | generated | published | failed
  postId    String?  @unique
  post      Post?    @relation(fields: [postId], references: [id])
  errorMsg  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([position])
  @@index([status, position])
}

// Blog tag
model Tag {
  id    String @id @default(cuid())
  name  String @unique
  slug  String @unique
  posts Post[]

  @@index([slug])
}
